animations {
    window-open {
        duration-ms 350
        curve "ease-out-expo" 
    }

    window-close {
        duration-ms 300
        curve "ease-out-quad"
    }
    
    horizontal-view-movement {
        spring damping-ratio=0.8 stiffness=800 epsilon=0.0001
    }

    window-movement {
        spring damping-ratio=0.8 stiffness=800 epsilon=0.0001
    }
}